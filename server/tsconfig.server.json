{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "outDir": "../dist-server",
        "rootDir": "..",
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "../node_modules",
        "../src",
        "**/*.test.ts"
    ]
}